        <launchBrowser>
            <progressText>Open OpenCA Website</progressText>
            <url>http://www.openca.org/alby/install2?prj=libpki;ver=0.8.6</url>
        </launchBrowser>
    </finalPageActionList>

    <platformOptionsList>
        <platformOptions>
            <platform>linux</platform>
        </platformOptions>
    </platformOptionsList>
</project>

